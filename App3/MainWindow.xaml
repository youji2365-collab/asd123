<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="App3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <MenuBar Grid.Row="0">
            <MenuBarItem Title="Actions">
                <MenuFlyoutItem Text="Change Icon" Click="ChangeIcon_Click"/>
            </MenuBarItem>
        </MenuBar>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
              PointerEntered="IconGrid_PointerEntered"
              PointerExited="IconGrid_PointerExited">
            <Grid.Resources>
                <Storyboard x:Name="FadeInStoryboard">
                    <DoubleAnimation Storyboard.TargetName="hoverText" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.5" />
                    <DoubleAnimation Storyboard.TargetName="BrightnessOverlay" Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.5" />
                </Storyboard>
                <Storyboard x:Name="FadeOutStoryboard">
                    <DoubleAnimation Storyboard.TargetName="hoverText" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.5" />
                    <DoubleAnimation Storyboard.TargetName="BrightnessOverlay" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.5" />
                </Storyboard>
            </Grid.Resources>

            <Ellipse x:Name="IconEllipse" Width="200" Height="200">
                <Ellipse.Fill>
                    <ImageBrush x:Name="IconImageBrush" ImageSource="Assets/images.png" ImageFailed="IconImageBrush_ImageFailed"/>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse x:Name="BrightnessOverlay" Fill="Black" Opacity="0" Width="200" Height="200"/>

            <TextBlock x:Name="hoverText" Text="RE"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False" Opacity="0"
                       Foreground="White" FontWeight="Bold" FontSize="80"/>
        </Grid>
    </Grid>
</Window>